<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4C382B">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWelcome"
                android:text="Halo Nana, Selamat datang di toko kami!"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#BAAFA0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Kami menyediakan berbagai varian rasa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#BAAFA0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/rgMakanan"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbClassic"
                    android:text="Brownies klasik Brunee, lembut dan manis dengan rasa coklat premium."
                    android:textColor="#BAAFA0"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/brownie_classic_medium"
                    android:drawablePadding="8dp"/>

                <RadioButton
                    android:id="@+id/rbNuts"
                    android:text="Brownies isi kacang dan coklat, memberikan kombinasi tekstur renyah dan lembut."
                    android:textColor="#BAAFA0"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/brownie_nuts_medium"
                    android:drawablePadding="8dp"/>

                <RadioButton
                    android:id="@+id/rbCheese"
                    android:text="Perpaduan cokelat manis dan keju gurih yang lumer, bikin rasa lebih creamy dan pas di lidah."
                    android:textColor="#BAAFA0"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/brownie_cheese_medium"
                    android:drawablePadding="8dp"/>

                <RadioButton
                    android:id="@+id/rbEspresso"
                    android:text="Cokelat dan kopi espresso berpadu sempurna, manisnya halus dengan sentuhan pahit yang elegan."
                    android:textColor="#BAAFA0"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/brownie_espresso_medium"
                    android:drawablePadding="8dp"/>

                <RadioButton
                    android:id="@+id/rbOreo"
                    android:text="Brownies lembut bertemu Oreo renyah, perpaduan manis dan tekstur yang bikin tiap gigitan nagih."
                    android:textColor="#BAAFA0"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/brownie_oreo_medium"
                    android:drawablePadding="8dp"/>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <!-- Navigasi bawah -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#BAAFA0"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnHome"
            android:text="Home"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#BAAFA0"
            android:layout_height="wrap_content"
            android:backgroundTint="#4C382B"/>

        <Button
            android:id="@+id/btnOrder"
            android:text="Order"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#BAAFA0"
            android:layout_height="wrap_content"
            android:backgroundTint="#4C382B"/>

        <Button
            android:id="@+id/btnProfile"
            android:text="Profile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#BAAFA0"
            android:layout_height="wrap_content"
            android:backgroundTint="#4C382B"/>
    </LinearLayout>

</LinearLayout>
